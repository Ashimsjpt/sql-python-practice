{
  "name": "SQL + Python Practice",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "postCreateCommand": "sudo apt update && sudo apt install -y sqlite3 git",
  "postStartCommand": "grep -q \"alias run='bash /workspaces/sql-python-practice/run'\" ~/.bashrc || echo \"alias run='bash /workspaces/sql-python-practice/run'\" >> ~/.bashrc",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "alexcvzz.vscode-sqlite"
      ],
      "settings": {
        "files.exclude": {
          "**/.git": true,
          "**/.github": true,
          "**/.devcontainer": true,
          "**/.vscode": true,
          "**/.gitignore": true,
          "**/run": true
        }
      }
    }
  }
}