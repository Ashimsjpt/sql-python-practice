{
  "name": "SQL + Python Practice",
  "image": "mcr.microsoft.com/devcontainers/python:3.11",
  "remoteUser": "codespace",
  "postCreateCommand": "sudo apt update && sudo apt install -y sqlite3 git",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "alexcvzz.vscode-sqlite"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python3",
        "files.exclude": {
          "**/.git": true,
          "**/.github": true,
          "**/.devcontainer": true,
          "**/.vscode": true,
          "**/.gitignore": true,
          "**/run": true
        }
      }
    }
  }
}